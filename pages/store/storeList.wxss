page {
  background: #fff;
}

.store-tit {
  width: 100%;
  height: 91rpx;
  position: relative;
  margin: 20rpx 0 10rpx;
}

.store-tit image {
  width: 310rpx;
  height: 91rpx;
  display: block;
  margin: 0 auto;
}

.store-num {
  text-align: center;
  color: #999;
  font-size: 23rpx;
}

.store-list {
  border-top: 1rpx solid #e5e5e5;
  margin-top: 20rpx;
}

.store-list .store-item {
  border-bottom: 1rpx solid #e5e5e5;
  padding: 20rpx;
  color: #666;
}

.store-list .store-item .left-info {
  width: 550rpx;
  line-height: 46rpx;
}

.store-list .store-item .left-info .name {
  font-size: 28rpx;
}

.store-list .store-item .left-info .address {
  color: #999;
  font-size: 24rpx;
}

.store-list .store-item .right-info {
  text-align: right;
  width: 130rpx;
  flex-shrink: 0;
}

.store-list .store-item .right-info image {
  display: inline-block;
  width: 47rpx;
  height: 43rpx;
}

.distance {
  font-size: 22rpx;
  color: #999;
}
