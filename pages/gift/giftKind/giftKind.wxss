.bg-img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}


.tag-content {
  width: 100%;
  height: 100vh;
}

.tag-box {
  background: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100vh;
}

.tag-inbox {
  width: 600rpx;
}

.tag-box .tag-img {
  width: 600rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.tag-box .tag-img image {
  width: 100%;
  height: 100%;
  display: block;
}


.tag-btn-content {
  padding: 90rpx 60rpx 0;
}

.tag-btn-content button {
  background: none;
  padding: 0;
}
.tag-btn-content button::after{
  border: none;
}
.tag-btn-content .get-tag {
  width: 432rpx;
  height: 114rpx;
}

.tag-btn-content .get-tag image {
  width: 100%;
  height: 100%;
  display: block;
}
.gift-notice{
  color: #1d2088;
