.video-banner{
  width: 100%;
  height: 380rpx;
  overflow: hidden;
}
.video-banner image{
  display: block;
  width: 100%;
  height: 100%;
}
.pic-info{
  color: #666;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin: 10rpx 0 30rpx;
}
.video-tit{
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 20rpx;
  line-height: 30rpx;
}
.video-list{
  width: 100%;
}
.video-list .video-item{
  width: 750rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}
.video-list .video-item video{
  width: 710rpx;
  height: 422rpx;
  border-radius: 8rpx;
}
.video-list .video-item .info{
  color: #666;
  font-size: 24rpx;
}