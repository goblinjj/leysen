.zan-tab__item--selected .zan-tab__title {
color:#e3921e;
border-bottom:2px solid #e3921e;
}
.order-list{
  padding: 44px 0 20rpx;
}
.head_tab{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
}
.order-list{
  width: 750rpx;
  overflow: hidden;
}
.order-item{
  padding: 20rpx;
  background: #fff;
  margin-top: 15rpx;
}
.order-detail{
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 20rpx;
}
.order-item .left-info{
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #e5e5e5;
}
.order-item .left-info image{
  display: block;
  width: 100%;
  height: 100%;
 
}
.order-item .right-info{
  padding:15rpx 0 15rpx 25rpx;
  width: 100%;
}
.order-item .right-info .tit{
  line-height: 43rpx;
  height: 43rpx;
}
.order-item .right-info .tit .name{
  font-size: 28rpx;
  overflow: hidden;
  max-width: 360rpx;
}
.order-item .right-info .price{
  color: #ff3300;
  font-size: 26rpx;
  flex-shrink: 0;
}
.order-item .right-info .num{
  text-align: right;
  color: #777;
  line-height: 43rpx;
}
.order-item .right-info .subInfo{
  font-size: 24rpx;
  text-align: right;
  color: #aaa;
  line-height: 43rpx;
}

/* 按钮 */
.order-btn {
  padding-top: 20rpx;
}
.order-btn-status{
  margin: 0;
  margin-left: 20rpx;
  border-radius: 6rpx;
}
.used{
  color: #999;
}

.use-content{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  z-index: 6;
}
.use-content image{
  display: block;
  width: 350rpx;
  height: 350rpx;
}
